<% include partials/header %>

<div class="container">
  <h1 class="text-center mb-3">Welcome to Casperr</h1>
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <% if(message.length>0){%>
      <div class="alert alert-danger text-center">
        <%= message %>
      </div>
      <%}%>
      <div class="card">
        <div class="card-header text-center">
          <i class="fas fa-sign-in-alt pr-2"></i>
          Login
        </div>
        <form class="card-body" action="/login" method="POST">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"
              name="email" required>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password"
              required>
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
          <a href="/register" class="badge ml-4 text-md">Signup</a>
        </form>
      </div>

      <div class="col-lg-12">
        <div class="col-md-6 mx-auto text-center">
          <h1>
            <a href="/auth/facebook" class="btn-social btn-facebook btn-lg">
              <i class="fab fa-facebook-f margin"></i>Login With Facebook
            </a>
          </h1>
        </div>
        <div class="col-md-6 mx-auto text-center">
          <h1>
            <a href="/auth/google" class="btn-social btn-google btn-lg">
              <i class="fab fa-google-plus margin"></i>Login With Google
            </a>
          </h1>
        </div>
      </div>
      
    </div>
  </div>

</div>

